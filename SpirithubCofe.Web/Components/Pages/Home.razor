@code {
    private List<Category> homepageCategories = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            homepageCategories = await CategoryService.GetHomepageCategoriesAsync();
        }
        catch (Exception ex)
        {
            // Log error in production
            Console.WriteLine($"Error loading homepage categories: {ex.Message}");
            homepageCategories = new();
        }
    }

    private string GetCategoryName(Category category)
    {
        var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
        return currentCulture.StartsWith("ar") && !string.IsNullOrEmpty(category.NameAr) 
            ? category.NameAr 
            : category.Name;
    }
}
