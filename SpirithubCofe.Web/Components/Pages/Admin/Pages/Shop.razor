@page "/admin/pages/shop"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Shop Page Management - SpirithubCofe</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-store me-2"></i>
                        Shop Page Management
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="text-muted">
                                Configure your shop layout, product display settings, filtering options, and categories.
                            </p>
                            
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                This page is under development. Soon you'll be able to customize your shop experience.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-shopping-cart text-success" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Coming Soon</h5>
                                    <p class="text-muted">Advanced shop customization</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>