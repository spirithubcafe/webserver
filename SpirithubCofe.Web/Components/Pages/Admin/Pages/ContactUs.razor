@page "/admin/pages/contact"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Contact Us Page Management - SpirithubCofe</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-phone me-2"></i>
                        Contact Us Page Management
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="text-muted">
                                Manage contact information, business hours, location details, and contact forms.
                            </p>
                            
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                This page is under development. Soon you'll be able to update your contact details.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-map-marker-alt text-warning" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Coming Soon</h5>
                                    <p class="text-muted">Contact information editor</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>