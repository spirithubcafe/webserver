@page "/admin/pages/terms"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Terms & Conditions Management - SpirithubCofe</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-contract me-2"></i>
                        Terms & Conditions Management
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="text-muted">
                                Manage your terms of service, user agreements, and legal conditions.
                            </p>
                            
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                This page is under development. Soon you'll be able to edit your terms & conditions.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-balance-scale text-dark" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Coming Soon</h5>
                                    <p class="text-muted">Legal terms editor</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>