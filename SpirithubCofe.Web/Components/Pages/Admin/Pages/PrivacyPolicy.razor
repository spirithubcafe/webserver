@page "/admin/pages/privacy"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Privacy Policy Management - SpirithubCofe</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        Privacy Policy Management
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="text-muted">
                                Manage your privacy policy content, data collection practices, and user privacy rights.
                            </p>
                            
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                This page is under development. Soon you'll be able to edit your privacy policy.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-shield text-secondary" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Coming Soon</h5>
                                    <p class="text-muted">Privacy policy editor</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>