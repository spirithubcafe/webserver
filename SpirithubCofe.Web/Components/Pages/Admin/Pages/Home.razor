@page "/admin/pages/home"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Home Page Management - SpirithubCofe</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-home me-2"></i>
                        Home Page Management
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="text-muted">
                                Manage your homepage content, hero sections, featured products, and promotional banners.
                            </p>
                            
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                This page is under development. Soon you'll be able to customize your homepage content.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-line text-primary" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Coming Soon</h5>
                                    <p class="text-muted">Advanced homepage management tools</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>