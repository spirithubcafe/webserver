@page "/admin"
@page "/admin/dashboard"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]
@inject IStringLocalizer<SpirithubCofe.Langs.Resources> Localizer

@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization

<!-- Simple Odoo-Style Dashboard -->
<div class="p-8 bg-gray-50 min-h-screen">
    <!-- Welcome Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">@Localizer["WelcomeToDashboard"]</h1>
        <p class="text-gray-600">@Localizer["ManageSpirithubCafe"]</p>
    </div>

    <!-- Main Navigation Grid - Simple Odoo Style -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-6 max-w-6xl">
        
        <!-- Products -->
        <a href="/admin/products" class="group">
            <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 p-8 text-center border border-gray-100 hover:border-orange-200">
                <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-orange-400 to-orange-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1">@Localizer["Products"]</h3>
            </div>
        </a>

        <!-- Categories -->
        <a href="/admin/categories" class="group">
            <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 p-8 text-center border border-gray-100 hover:border-blue-200">
                <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-blue-400 to-blue-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1">@Localizer["Categories"]</h3>
            </div>
        </a>

        <!-- Orders -->
        <a href="/admin/orders" class="group">
            <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 p-8 text-center border border-gray-100 hover:border-green-200">
                <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-green-400 to-green-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1">@Localizer["Orders"]</h3>
            </div>
        </a>

        <!-- Users -->
        <a href="/admin/users" class="group">
            <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 p-8 text-center border border-gray-100 hover:border-purple-200">
                <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-purple-400 to-purple-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1">@Localizer["Users"]</h3>
            </div>
        </a>

        <!-- Slides -->
        <a href="/admin/slides" class="group">
            <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 p-8 text-center border border-gray-100 hover:border-pink-200">
                <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-pink-400 to-pink-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1">@Localizer["Slides"]</h3>
            </div>
        </a>

        <!-- Settings -->
        <a href="/admin/settings" class="group">
            <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 p-8 text-center border border-gray-100 hover:border-gray-300">
                <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-gray-400 to-gray-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1">@Localizer["Settings"]</h3>
            </div>
        </a>

    </div>
</div>

