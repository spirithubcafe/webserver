    private string GenerateSlug(string name)
    {
        if (string.IsNullOrEmpty(name)) return string.Empty;
        
        return name.ToLowerInvariant()
                  .Replace(" ", "-")
                  .Replace("&", "and")
                  .Replace("--", "-")
                  .Trim('-');
    }

