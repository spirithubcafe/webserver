@page "/about"
@layout SpirithubCofe.Web.Components.Layout.PublicLayout

<PageTitle>About Us - SpirithubCofe</PageTitle>

<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-amber-50 to-amber-100 py-20">
    <div class="absolute inset-0 bg-black bg-opacity-5"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            Our Coffee <span class="text-amber-600">Story</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            From the mountains of Oman to your cup, we bring you the finest coffee experience with passion and tradition.
        </p>
    </div>
</section>

<!-- Main Story Section -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <!-- Story Text -->
            <div class="space-y-8">
                <div>
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
                        Brewing Excellence Since 2020
                    </h2>
                    <p class="text-lg text-gray-600 leading-relaxed mb-6">
                        SpirithubCofe began as a dream to bring the world's finest coffee to the beautiful Sultanate of Oman. 
                        What started as a small passion project has grown into a trusted source for premium coffee beans and 
                        exceptional brewing experiences.
                    </p>
                    <p class="text-lg text-gray-600 leading-relaxed">
                        We source our beans directly from sustainable farms across Ethiopia, Brazil, Colombia, and Yemen, 
                        ensuring every cup tells a story of quality, tradition, and respect for the craft of coffee making.
                    </p>
                </div>
                
                <!-- Stats -->
                <div class="grid grid-cols-3 gap-8 pt-8 border-t border-gray-200">
                    <div class="text-center">
                        <div class="text-3xl font-bold text-amber-600">50+</div>
                        <div class="text-sm text-gray-500 font-medium">Coffee Varieties</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-amber-600">1000+</div>
                        <div class="text-sm text-gray-500 font-medium">Happy Customers</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-amber-600">24h</div>
                        <div class="text-sm text-gray-500 font-medium">Fresh Delivery</div>
                    </div>
                </div>
            </div>
            
            <!-- Image -->
            <div class="relative">
                <div class="aspect-w-4 aspect-h-3 rounded-2xl overflow-hidden shadow-2xl">
                    <div class="bg-gradient-to-br from-amber-400 to-amber-600 flex items-center justify-center">
                        <svg class="w-32 h-32 text-white opacity-80" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M18.5 3H6c-1.1 0-2 .9-2 2v5.71c0 3.83 2.95 7.18 6.78 7.29 3.96.12 7.22-3.06 7.22-7v-1h.5c1.93 0 3.5-1.57 3.5-3.5S20.43 3 18.5 3zM16 5v3h1.5c.83 0 1.5-.67 1.5-1.5S17.83 5 17 5h-1zM6 5h8v8.58c0 2.4-1.9 4.42-4.29 4.42S5.42 15.98 5.42 13.58V5z"/>
                        </svg>
                    </div>
                </div>
                <!-- Decorative elements -->
                <div class="absolute -top-4 -right-4 w-20 h-20 bg-amber-200 rounded-full opacity-60"></div>
                <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-amber-300 rounded-full opacity-40"></div>
            </div>
        </div>
    </div>
</section>

<!-- Values Section -->
<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Our Values</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Every decision we make is guided by our core values that shape the way we source, roast, and serve our coffee.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
            <!-- Quality -->
            <div class="text-center group">
                <div class="w-20 h-20 bg-gradient-to-br from-amber-400 to-amber-500 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-4">Premium Quality</h3>
                <p class="text-gray-600 leading-relaxed">
                    We never compromise on quality. Every bean is carefully selected and roasted to perfection, 
                    ensuring an exceptional coffee experience in every cup.
                </p>
            </div>
            
            <!-- Sustainability -->
            <div class="text-center group">
                <div class="w-20 h-20 bg-gradient-to-br from-green-400 to-green-500 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-4">Sustainability</h3>
                <p class="text-gray-600 leading-relaxed">
                    We work directly with farmers who practice sustainable growing methods, ensuring fair trade 
                    and environmental responsibility in every step of our supply chain.
                </p>
            </div>
            
            <!-- Community -->
            <div class="text-center group">
                <div class="w-20 h-20 bg-gradient-to-br from-purple-400 to-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-4">Community</h3>
                <p class="text-gray-600 leading-relaxed">
                    We believe in building strong relationships with our customers, farmers, and the local Omani community, 
                    creating connections that go beyond just great coffee.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Meet Our Team</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Our passionate team of coffee experts is dedicated to bringing you the best coffee experience possible.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
            <!-- Team Member 1 -->
            <div class="text-center group">
                <div class="relative mb-6">
                    <div class="w-32 h-32 bg-gradient-to-br from-amber-200 to-amber-300 rounded-full mx-auto flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                        <svg class="w-16 h-16 text-amber-700" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Ahmed Al-Rashid</h3>
                <p class="text-amber-600 font-medium mb-3">Founder & Master Roaster</p>
                <p class="text-gray-600 text-sm leading-relaxed">
                    With over 15 years of experience in coffee roasting and a deep passion for Omani hospitality, 
                    Ahmed founded SpirithubCofe to share exceptional coffee with fellow coffee lovers.
                </p>
            </div>
            
            <!-- Team Member 2 -->
            <div class="text-center group">
                <div class="relative mb-6">
                    <div class="w-32 h-32 bg-gradient-to-br from-green-200 to-green-300 rounded-full mx-auto flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                        <svg class="w-16 h-16 text-green-700" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Fatma Al-Zahra</h3>
                <p class="text-amber-600 font-medium mb-3">Quality Control Manager</p>
                <p class="text-gray-600 text-sm leading-relaxed">
                    Fatma ensures every batch meets our high standards. Her expertise in cupping and quality assessment 
                    guarantees that only the finest coffee reaches our customers.
                </p>
            </div>
            
            <!-- Team Member 3 -->
            <div class="text-center group">
                <div class="relative mb-6">
                    <div class="w-32 h-32 bg-gradient-to-br from-purple-200 to-purple-300 rounded-full mx-auto flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                        <svg class="w-16 h-16 text-purple-700" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Mohammed Al-Kindi</h3>
                <p class="text-amber-600 font-medium mb-3">Customer Experience Director</p>
                <p class="text-gray-600 text-sm leading-relaxed">
                    Mohammed leads our customer service team, ensuring every interaction reflects our commitment 
                    to exceptional service and the warm hospitality Oman is known for.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Journey Section -->
<section class="py-20 bg-gradient-to-br from-amber-600 to-amber-700 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">From Bean to Cup</h2>
            <p class="text-xl text-amber-100 max-w-2xl mx-auto">
                Follow the journey of our coffee from carefully selected farms to your perfect cup.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Step 1 -->
            <div class="text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-2xl font-bold">1</span>
                </div>
                <h3 class="text-lg font-bold mb-3">Sourcing</h3>
                <p class="text-amber-100 text-sm leading-relaxed">
                    We visit farms personally to select the finest beans, building relationships with farmers who share our quality standards.
                </p>
            </div>
            
            <!-- Step 2 -->
            <div class="text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-2xl font-bold">2</span>
                </div>
                <h3 class="text-lg font-bold mb-3">Roasting</h3>
                <p class="text-amber-100 text-sm leading-relaxed">
                    Our master roasters carefully craft each batch to bring out the unique characteristics and flavors of every origin.
                </p>
            </div>
            
            <!-- Step 3 -->
            <div class="text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-2xl font-bold">3</span>
                </div>
                <h3 class="text-lg font-bold mb-3">Packaging</h3>
                <p class="text-amber-100 text-sm leading-relaxed">
                    We package immediately after roasting to lock in freshness, using sustainable materials that preserve quality.
                </p>
            </div>
            
            <!-- Step 4 -->
            <div class="text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-2xl font-bold">4</span>
                </div>
                <h3 class="text-lg font-bold mb-3">Delivery</h3>
                <p class="text-amber-100 text-sm leading-relaxed">
                    Fast delivery across Oman ensures you receive your coffee at peak freshness, ready to brew the perfect cup.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-gray-900 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Experience Premium Coffee?</h2>
        <p class="text-xl text-gray-300 mb-8">
            Join thousands of coffee lovers across Oman who trust SpirithubCofe for their daily coffee ritual.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/products" class="bg-amber-600 hover:bg-amber-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors duration-200 shadow-lg hover:shadow-xl">
                Shop Coffee
            </a>
            <a href="/contact" class="border border-gray-600 hover:border-gray-500 text-white px-8 py-4 rounded-lg font-semibold transition-colors duration-200">
                Contact Us
            </a>
        </div>
    </div>
</section>

