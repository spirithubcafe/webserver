@inherits LayoutComponentBase
@using SpirithubCofe.Web.Components.Account.Shared
@layout SpirithubCofe.Web.Components.Layout.MainLayout

<div class="min-h-screen bg-gradient-to-br from-orange-50 via-white to-orange-50">
    <!-- Header Section -->
    <div class="bg-gradient-to-r from-orange-600 to-orange-700 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-bold">Account Management</h1>
                    <p class="mt-2 text-orange-100">Manage your account settings and preferences</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">
            <!-- Sidebar Navigation -->
            <div class="lg:col-span-3">
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden sticky top-8">
                    <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
                        <h2 class="text-lg font-semibold text-gray-900">Settings</h2>
                    </div>
                    <div class="p-2">
                        <ManageNavMenu />
                    </div>
                </div>
            </div>

            <!-- Content Area -->
            <div class="lg:col-span-9 mt-8 lg:mt-0">
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                    <div class="p-8">
                        @Body
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
