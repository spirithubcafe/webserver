@inherits LayoutComponentBase
@implements IDisposable

@inject IStringLocalizer<Resources> Localizer
@inject CartService CartService
@inject NavigationManager Navigation
@inject SpirithubCofe.Application.Services.ISettingService SettingService
@inject SpirithubCofe.Web.Services.CategoryService CategoryService
@using System.Globalization
@using SpirithubCofe.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Antiforgery
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@using SpirithubCofe.Web
@using SpirithubCofe.Web.Components.Layout
@using SpirithubCofe.Web.Components.Shared
@using SpirithubCofe.Web.Components

<!DOCTYPE html>
<html data-theme="light" lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName"
    dir="@(CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")" class="h-full bg-gray-50">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="dist.css" />
    <link rel="stylesheet" href="@Assets["SpirithubCofe.Web.styles.css"]" />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <PageTitle>@Localizer["SiteTitle"]</PageTitle>
</head>

<body class="h-full">
    <div class="min-h-screen flex flex-col">
        <!-- Top Navigation -->
        <nav class="bg-white shadow-lg border-b border-gray-100 sticky top-0 z-50 flex-shrink-0">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-20">
                    <!-- Logo and Brand -->
                    <div class="flex items-center space-x-4">
                        <div class="flex-shrink-0 flex items-center">
                            @if (logoType == "image" && !string.IsNullOrEmpty(logoImage))
                            {
                                <!-- Dynamic Image Logo -->
                                <a href="/" class="flex items-center">
                                    <img src="@logoImage" alt="@(logoText ?? "SpirithubCofe")" class="h-12 w-auto mr-3" />
                                </a>
                            }
                            else
                            {
                                <!-- Text Logo with Coffee Bean Icon -->
                                <div
                                    class="w-10 h-10 bg-gradient-to-br from-amber-500 to-amber-600 rounded-full flex items-center justify-center mr-3 shadow-md">
                                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                                        <path
                                            d="M18.5 3H6c-1.1 0-2 .9-2 2v5.71c0 3.83 2.95 7.18 6.78 7.29 3.96.12 7.22-3.06 7.22-7v-1h.5c1.93 0 3.5-1.57 3.5-3.5S20.43 3 18.5 3zM16 5v3h1.5c.83 0 1.5-.67 1.5-1.5S17.83 5 17 5h-1zM6 5h8v8.58c0 2.4-1.9 4.42-4.29 4.42S5.42 15.98 5.42 13.58V5z" />
                                    </svg>
                                </div>
                                <div class="flex flex-col">
                                    <a href="/"
                                        class="text-2xl font-bold text-gray-900 hover:text-amber-600 transition-colors">
                                        @(string.IsNullOrEmpty(logoText) ? "SpirithubCofe" : logoText)
                                    </a>
                                    <span class="text-xs text-gray-500 font-medium">Premium Coffee from Oman</span>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Main Navigation - Desktop -->
                    <div class="hidden lg:flex items-center space-x-1">
 
                        <div class="relative group">
                            <button
                                class="flex items-center px-4 py-2 text-sm font-medium text-gray-600 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-all duration-200">
                            <svg class="w-4 h-4 mr-2 text-gray-400 group-hover:text-amber-600" viewBox="0 0 24 24"
                                fill="none">
                                <path d="M22 22L2 22" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                <path d="M2 11L10.1259 4.49931C11.2216 3.62279 12.7784 3.62279 13.8741 4.49931L22 11"
                                    stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                <path d="M15.5 5.5V3.5C15.5 3.22386 15.7239 3 16 3H18.5C18.7761 3 19 3.22386 19 3.5V8.5"
                                    stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                <path d="M4 22V9.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                <path d="M20 22V9.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                <path
                                    d="M15 22V17C15 15.5858 15 14.8787 14.5607 14.4393C14.1213 14 13.4142 14 12 14C10.5858 14 9.87868 14 9.43934 14.4393C9 14.8787 9 15.5858 9 17V22"
                                    stroke="currentColor" stroke-width="1.5" />
                                <path
                                    d="M14 9.5C14 10.6046 13.1046 11.5 12 11.5C10.8954 11.5 10 10.6046 10 9.5C10 8.39543 10.8954 7.5 12 7.5C13.1046 7.5 14 8.39543 14 9.5Z"
                                    stroke="currentColor" stroke-width="1.5" />
                            </svg>
                                @Localizer["Products"]
                                <svg class="w-4 h-4 ml-1 text-gray-400 group-hover:text-amber-600" fill="currentColor"
                                    viewBox="0 0 20 20">
                                    <path fill-rule="evenodd"
                                        d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </button>
                            <!-- Dropdown Menu -->
                            <div
                                class="absolute left-0 mt-2 w-64 bg-white border border-gray-100 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                                <div class="py-2">
                                    <NavLink href="/products"
                                        class="flex items-center px-4 py-2 text-sm text-gray-700 hover:text-amber-600 hover:bg-amber-50 border-b border-gray-100 font-medium">
                                        <div
                                            class="w-6 h-6 bg-gradient-to-br from-amber-100 to-amber-200 rounded-md flex items-center justify-center mr-3">
                                            <svg class="w-3 h-3 text-amber-600" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z" />
                                            </svg>
                                        </div>
                                        @Localizer["AllProducts"]
                                    </NavLink>
                                    @foreach (var category in categories.Take(8))
                                    {
                                        <NavLink href="@($"/products/{category.Slug}")"
                                            class="flex items-center px-4 py-2 text-sm text-gray-700 hover:text-amber-600 hover:bg-amber-50">
                                            <div
                                                class="w-6 h-6 bg-gradient-to-br from-indigo-100 to-indigo-200 rounded-md flex items-center justify-center mr-3">
                                                <svg class="w-3 h-3 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
                                                    <path
                                                        d="M18.5 3H6c-1.1 0-2 .9-2 2v5.71c0 3.83 2.95 7.18 6.78 7.29 3.96.12 7.22-3.06 7.22-7v-1h.5c1.93 0 3.5-1.57 3.5-3.5S20.43 3 18.5 3z" />
                                                </svg>
                                            </div>
                                            @(CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" && !string.IsNullOrEmpty(category.NameAr) ? category.NameAr : category.Name)
                                        </NavLink>
                                    }
                                    @if (categories.Count > 8)
                                    {
                                        <NavLink href="/products"
                                            class="flex items-center px-4 py-2 text-sm text-amber-600 hover:text-amber-700 hover:bg-amber-50 border-t border-gray-100 font-medium">
                                            <div
                                                class="w-6 h-6 bg-amber-100 rounded-md flex items-center justify-center mr-3">
                                                <svg class="w-3 h-3 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd"
                                                        d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                                        clip-rule="evenodd"></path>
                                                </svg>
                                            </div>
                                            @Localizer["ViewAllCategories"]
                                        </NavLink>
                                    }
                                </div>
                            </div>
                        </div>
                        <NavLink href="/about"
                            class="flex items-center px-4 py-2 text-sm font-medium text-gray-600 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-all duration-200 group">
                            <svg class="w-4 h-4 mr-2 text-gray-400 group-hover:text-amber-600" fill="currentColor"
                                viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            @Localizer["About"]
                        </NavLink>
                        <NavLink href="/contact"
                            class="flex items-center px-4 py-2 text-sm font-medium text-gray-600 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-all duration-200 group">
                            <svg class="w-4 h-4 mr-2 text-gray-400 group-hover:text-amber-600" fill="currentColor"
                                viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                            </svg>
                            @Localizer["Contact"]
                        </NavLink>
                    </div>

                    <!-- Right Side Actions -->
                    <div class="flex items-center space-x-4">
                        <AuthorizeView>
                            <Authorized>
                                <!-- Cart Button -->
                                <CartIcon />

                                <!-- User Menu -->
                                <div class="relative group">
                                    <button
                                        class="flex items-center space-x-3 p-2 text-sm rounded-lg hover:bg-gray-50 transition-all duration-200">
                                        <div
                                            class="w-8 h-8 bg-gradient-to-br from-amber-400 to-amber-500 rounded-full flex items-center justify-center text-white font-medium text-sm">
                                            @(context.User.Identity?.Name?.Substring(0, 1).ToUpper() ?? "U")
                                        </div>
                                        <div class="hidden sm:block text-left">
                                            <div class="text-sm font-medium text-gray-900">@Localizer["Profile"]</div>
                                        </div>
                                        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                    </button>
                                    <!-- User Dropdown -->
                                    <div
                                        class="absolute right-0 mt-2 w-56 bg-white border border-gray-100 rounded-xl shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                                        <div class="py-2">
                                            <!-- User Info Header -->
                                            <div class="px-4 py-3 border-b border-gray-100">
                                                <div class="text-sm font-medium text-gray-900">@context.User.Identity?.Name</div>
                                                <div class="text-xs text-gray-500">@Localizer["Customer"]</div>
                                            </div>
                                            
                                            <!-- Language Switcher -->
                                            <div class="px-4 py-3 border-b border-gray-100">
                                                <LanguageSwitcher />
                                            </div>

                                            <NavLink href="/Account/Manage"
                                                class="flex items-center px-4 py-3 text-sm text-gray-700 hover:text-amber-600 hover:bg-amber-50">
                                                <svg class="w-4 h-4 mr-3 text-gray-400" fill="currentColor"
                                                    viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd"
                                                        d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                                                        clip-rule="evenodd"></path>
                                                </svg>
                                                @Localizer["MyProfile"]
                                            </NavLink>
                                            <NavLink href="/orders"
                                                class="flex items-center px-4 py-3 text-sm text-gray-700 hover:text-amber-600 hover:bg-amber-50">
                                                <svg class="w-4 h-4 mr-3 text-gray-400" fill="currentColor"
                                                    viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd"
                                                        d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                                                        clip-rule="evenodd"></path>
                                                </svg>
                                                @Localizer["MyOrders"]
                                            </NavLink>
                                            <NavLink href="/favorites"
                                                class="flex items-center px-4 py-3 text-sm text-gray-700 hover:text-amber-600 hover:bg-amber-50">
                                                <svg class="w-4 h-4 mr-3 text-gray-400" fill="currentColor"
                                                    viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd"
                                                        d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                                                        clip-rule="evenodd"></path>
                                                </svg>
                                                @Localizer["Favorites"]
                                            </NavLink>

                                            <!-- Admin Panel - Only show for Admin users -->
                                            @if (context.User.IsInRole("Admin"))
                                            {
                                                <hr class="my-2 border-gray-100">
                                                <NavLink href="/admin/dashboard"
                                                    class="flex items-center px-4 py-3 text-sm text-purple-600 hover:text-purple-700 hover:bg-purple-50 font-medium">
                                                    <svg class="w-4 h-4 mr-3 text-purple-500" fill="currentColor"
                                                        viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd"
                                                            d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 111.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 111.414-1.414L15.586 13H14a1 1 0 01-1-1z"
                                                            clip-rule="evenodd"></path>
                                                    </svg>
                                                    @Localizer["AdminPanel"]
                                                </NavLink>
                                            }

                                            <hr class="my-2 border-gray-100">
                                            <form action="Account/Logout" method="post" class="inline-block w-full">
                                                <AntiforgeryToken />
                                                <input type="hidden" name="ReturnUrl" value="/" />
                                                <button type="submit"
                                                    class="flex items-center w-full px-4 py-3 text-sm text-red-600 hover:text-red-700 hover:bg-red-50">
                                                    <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd"
                                                            d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z"
                                                            clip-rule="evenodd"></path>
                                                    </svg>
                                                    @Localizer["SignOut"]
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </Authorized>
                            <NotAuthorized>
                                <div class="flex items-center space-x-3 rtl:space-x-reverse">
                                    <!-- Cart icon for guests -->
                                    <CartIcon />

                                    <!-- Login/Register buttons for large screens -->
                                    <div class="hidden lg:flex items-center space-x-3 rtl:space-x-reverse">
                                        <NavLink href="/Account/Login"
                                            class="flex items-center px-4 py-2 text-sm font-medium text-gray-600 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-all duration-200">
                                            <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd"
                                                    d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z"
                                                    clip-rule="evenodd"></path>
                                            </svg>
                                            @Localizer["Login"]
                                        </NavLink>
                                        <NavLink href="/Account/Register"
                                            class="flex items-center px-6 py-2.5 bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 text-white text-sm font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200">
                                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                <path
                                                    d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z">
                                                </path>
                                            </svg>
                                            @Localizer["Register"]
                                        </NavLink>
                                    </div>
                                </div>
                            </NotAuthorized>
                        </AuthorizeView>

                        <!-- Mobile menu component includes button -->
                        <MobileMenu IsOpen="isMobileMenuOpen" IsOpenChanged="OnMobileMenuToggled" />
                    </div>
                </div>
            </div>


        </nav>

        <!-- Main Content -->
        <main class="flex-1 flex flex-col">
            <div class="flex-1">
                <CustomErrorBoundary>
                    @Body
                </CustomErrorBoundary>  
            </div>
        </main>

        <!-- Footer -->
        <footer class="bg-gray-900 text-white flex-shrink-0 mt-auto">
            <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                    <div class="col-span-1 md:col-span-2">
                        <h3 class="text-2xl font-bold text-amber-400 mb-4">SpirithubCofe</h3>
                        <p class="text-gray-300 max-w-md">
                            @Localizer["PremiumCoffeeExperience"]
                        </p>
                    </div>
                    <div>
                        <h4 class="text-lg font-semibold mb-4">@Localizer["QuickLinks"]</h4>
                        <ul class="space-y-2 text-gray-300">
                            <li><NavLink href="/products"
                                    class="hover:text-amber-400 transition-colors">@Localizer["Products"]</NavLink></li>
                            <li><NavLink href="/about" class="hover:text-amber-400 transition-colors">@Localizer["About"]</NavLink>
                            </li>
                            <li><NavLink href="/contact"
                                    class="hover:text-amber-400 transition-colors">@Localizer["Contact"]</NavLink></li>
                            <li><NavLink href="/shipping"
                                    class="hover:text-amber-400 transition-colors">@Localizer["ShippingInfo"]</NavLink></li>
                        </ul>
                    </div>
                    <div>
                        <h4 class="text-lg font-semibold mb-4">@Localizer["ContactInfo"]</h4>
                        <ul class="space-y-2 text-gray-300">
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                                </svg>
                                Al Mouj St, Muscat, Oman
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                                </svg>
                                +968 9190 0005
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                                </svg>
                                +968 7272 6999
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                                </svg>
                                info@spirithubcafe.com
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                </svg>
                                Daily: 7 AM - 12 AM
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="mt-8 pt-8 border-t border-gray-700 text-center text-gray-400">
                    <p>&copy; 2025 SpirithubCofe. @Localizer["AllRightsReserved"].</p>
                </div>
            </div>
        </footer>
    </div>

    <!-- Error UI -->
    <div id="blazor-error-ui" data-nosnippet
        class="fixed top-4 right-4 z-50 bg-red-600 text-white p-4 rounded-lg shadow-lg max-w-md hidden">
        <div class="flex items-center justify-between">
            <span>An unhandled error has occurred.</span>
            <div class="ml-4 flex space-x-2">
                <a href="." class="underline hover:no-underline">Reload</a>
                <button class="dismiss text-xl font-bold hover:text-gray-200">&times;</button>
            </div>
        </div>
    </div>

    @code {
        private int mobileCartCount = 0;
        private string logoType = "text";
        private string logoText = "SpirithubCofe";
        private string logoImage = "";
        private bool isMobileMenuOpen = false;
        private List<SpirithubCofe.Domain.Entities.Category> categories = new();

        protected override async Task OnInitializedAsync()
        {
            await LoadLogoSettings();
            await LoadCategories();
            await CartService.InitializeAsync();
            UpdateMobileCartInfo();
            CartService.OnCartChanged += UpdateMobileCartInfo;
        }

        private async Task LoadCategories()
        {
            try
            {
                categories = await CategoryService.GetActiveCategoriesAsync();
            }
            catch (Exception)
            {
                // If category service fails, use empty list
                categories = new();
            }
        }

        private async Task LoadLogoSettings()
        {
            try
            {
                logoType = await SettingService.GetValueAsync("logo_type", "text");
                logoText = await SettingService.GetValueAsync("logo_text", "SpirithubCofe");
                logoImage = await SettingService.GetValueAsync("logo_image", "");
            }
            catch (Exception)
            {
                // If settings service fails, use defaults
                logoType = "text";
                logoText = "SpirithubCofe";
                logoImage = "";
            }
        }

        private void UpdateMobileCartInfo()
        {
            mobileCartCount = CartService.ItemCount;
            InvokeAsync(StateHasChanged);
        }

        private void NavigateToCart()
        {
            Navigation.NavigateTo("/cart", forceLoad: true);
        }

        private void NavigateToCartAndCloseMenu()
        {
            CloseMobileMenu();
            Navigation.NavigateTo("/cart", forceLoad: true);
        }

        private void ToggleMobileMenu()
        {
            isMobileMenuOpen = !isMobileMenuOpen;
        }

        private void CloseMobileMenu()
        {
            isMobileMenuOpen = false;
        }

        private void OnMobileMenuToggled(bool isOpen)
        {
            isMobileMenuOpen = isOpen;
        }

        public void Dispose()
        {
            CartService.OnCartChanged -= UpdateMobileCartInfo;
        }
    }


