@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@inject IStringLocalizer<SpirithubCofe.Langs.Resources> Localizer
@inject SpirithubCofe.Application.Services.ISettingService SettingService
@implements IDisposable
@rendermode InteractiveServer

<!-- Mobile menu button -->
<div class="lg:hidden fixed top-4 left-4 z-50">
    <button @onclick="ToggleMobileMenu" type="button" 
            class="bg-gray-900 text-white p-2 rounded-md shadow-lg hover:bg-gray-800 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>
</div>

@if (isMobileMenuOpen)
{
    <!-- Mobile overlay -->
    <div @onclick="CloseMobileMenu" 
         class="lg:hidden fixed inset-0 bg-opacity-30 z-40">
    </div>
}

<!-- Sidebar -->
<div class="@($"fixed inset-y-0 left-0 z-50 w-64 bg-gray-900 text-white lg:translate-x-0 flex flex-col transition-transform duration-300 ease-in-out {(isMobileMenuOpen ? "translate-x-0" : "-translate-x-full")}")"
     @key="@("admin-sidebar")">
     
    <!-- Logo -->
    <div class="flex items-center justify-between h-16 bg-gray-800 px-4 flex-shrink-0">
        <div class="flex items-center space-x-3">
            <svg class="w-8 h-8 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 7c0-1.1.9-2 2-2h14c1.1 0 2 .9 2 2v10c0 1.1-.9 2-2 2H5c-1.1 0-2-.9-2-2V7zm2 0v10h14V7H5z"/>
            </svg>
            <span class="text-xl font-bold">@Localizer["Admin Panel"]</span>
        </div>
        
        <!-- Close button for mobile -->
        <button @onclick="CloseMobileMenu" class="lg:hidden text-gray-400 hover:text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <!-- Navigation - Scrollable Area -->
    <div class="flex-1 overflow-y-auto scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-gray-800" style="padding-bottom: 80px;">
        <nav class="mt-8">
            <ul class="space-y-2 px-4">
            <!-- Dashboard -->
            <li>
                <a href="/admin" @onclick="OnMenuItemClick" class="flex items-center space-x-3 p-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    <span>@Localizer["Dashboard"]</span>
                </a>
            </li>

            <!-- Products -->
            <li>
                <a href="/admin/products" @onclick="OnMenuItemClick" class="flex items-center space-x-3 p-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                    <span>@Localizer["Products"]</span>
                </a>
            </li>

            <!-- Categories -->
            <li>
                <a href="/admin/categories" @onclick="OnMenuItemClick" class="flex items-center space-x-3 p-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                    <span>@Localizer["Categories"]</span>
                </a>
            </li>

            <!-- Orders -->
            <li>
                <a href="/admin/orders" @onclick="OnMenuItemClick" class="flex items-center space-x-3 p-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <span>@Localizer["Orders"]</span>
                </a>
            </li>

            <!-- Users -->
            <li>
                <a href="/admin/users" @onclick="OnMenuItemClick" class="flex items-center space-x-3 p-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                    </svg>
                    <span>@Localizer["Users"]</span>
                </a>
            </li>

            <!-- Reports -->
            <li>
                <a href="/admin/reports" @onclick="OnMenuItemClick" class="flex items-center space-x-3 p-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2-2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                    <span>@Localizer["Reports"]</span>
                </a>
            </li>

            <!-- Pages -->
            <li>
                <button @onclick="TogglePagesMenu" class="w-full flex items-center justify-between space-x-3 p-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <div class="flex items-center space-x-3">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <span>Pages</span>
                    </div>
                    <svg class="w-4 h-4 transform @(isPagesMenuOpen ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                
                @if (isPagesMenuOpen)
                {
                    <ul class="mt-2 ml-6 space-y-1">
                        <li>
                            <a href="/admin/pages/home" @onclick="OnMenuItemClick" class="flex items-center space-x-2 p-2 rounded text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                </svg>
                                <span>Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/pages/shop" @onclick="OnMenuItemClick" class="flex items-center space-x-2 p-2 rounded text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                </svg>
                                <span>Shop</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/pages/about" @onclick="OnMenuItemClick" class="flex items-center space-x-2 p-2 rounded text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>About Us</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/pages/contact" @onclick="OnMenuItemClick" class="flex items-center space-x-2 p-2 rounded text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                <span>Contact Us</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/pages/privacy" @onclick="OnMenuItemClick" class="flex items-center space-x-2 p-2 rounded text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                </svg>
                                <span>Privacy Policy</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/pages/terms" @onclick="OnMenuItemClick" class="flex items-center space-x-2 p-2 rounded text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                <span>Terms & Conditions</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/pages/delivery" @onclick="OnMenuItemClick" class="flex items-center space-x-2 p-2 rounded text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                </svg>
                                <span>Delivery Policy</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/pages/refund" @onclick="OnMenuItemClick" class="flex items-center space-x-2 p-2 rounded text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                                </svg>
                                <span>Refund Policy</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/pages/faq" @onclick="OnMenuItemClick" class="flex items-center space-x-2 p-2 rounded text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>FAQ</span>
                            </a>
                        </li>
                    </ul>
                }
            </li>

            <!-- Settings -->
            <li>
                <a href="/admin/settings" @onclick="OnMenuItemClick" class="flex items-center space-x-3 p-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span>@Localizer["Settings"]</span>
                </a>
            </li>
            </ul>
        </nav>
    </div>

    <!-- User info at bottom -->
    <div class="absolute bottom-0 left-0 right-0 p-4 bg-gray-800 flex-shrink-0 z-10 border-t border-gray-700">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white text-sm font-medium">A</span>
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-white truncate">Administrator</p>
                <p class="text-xs text-gray-400">@Localizer["Administrator"]</p>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isMobileMenuOpen = false;
    private bool isPagesMenuOpen = false;

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        isMobileMenuOpen = false;
    }

    private void TogglePagesMenu()
    {
        isPagesMenuOpen = !isPagesMenuOpen;
    }

    private void OnMenuItemClick()
    {
        if (isMobileMenuOpen)
        {
            isMobileMenuOpen = false;
        }
    }

    public void Dispose()
    {
    }
}